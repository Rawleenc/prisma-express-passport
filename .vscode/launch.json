{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug w/ tsc",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/dist/index.js",
      "outFiles": ["${workspaceFolder}/**/*.js"]
    },
    {
      "name": "Debug w/ ts-node",
      "type": "pwa-node",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "runtimeArgs": ["--nolazy", "-r", "ts-node/register"],
      "args": ["${relativeFile}"],
      "cwd": "${workspaceFolder}",
      "sourceMaps": true
    },
    {
      "name": "Debug w/ ts-node-dev",
      "type": "pwa-node",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "runtimeExecutable": "tsnd",
      "runtimeArgs": ["--respawn"],
      "args": ["${workspaceFolder}/src/index.ts"]
    }
  ]
}
